<?php

namespace Tests;

use App\Service\Printer;
use App\Service\FizzBuzzService;
use App\Validation\InputValidator;
use InvalidArgumentException;
use PHPUnit\Framework\TestCase;

class PrinterTest extends TestCase
{
    private Printer $printer;

    public function setUp(): void
    {
        $this->printer = new Printer(new FizzBuzzService(), new InputValidator());
    }
    public function testGenerateFizzBuzzSequenceWithNegativeNumbers(): void
    {
        $this->expectException(InvalidArgumentException::class);
        $this->printer->printFizzBuzz(-20, -10);
    }

    public function testGenerateFizzBuzzSequenceWithEndBeforeStart(): void
    {
        $this->expectException(InvalidArgumentException::class);
        $this->printer->printFizzBuzz(20, 10);
    }

    public function testGenerateFizzBuzzWithStartGreaterThanEnd(): void
    {
        $this->expectException(Invalid)
    }
}
